{
  "compilerOptions": {
    "module": "es2015",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": [
      "es6",
      "es7",
      "esnext",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}